_maid() {
  case "$2","$3" in
    -*,*)
      COMPREPLY=( $(compgen -W "-h -l -n -q -f -w -r --help --list --dry-run --quiet --taskfile --watch --restart" -- "$2") )
      ;;
    *,-f | *,--maidfile | *,-w | *,--watch)
      COMPREPLY=( $(compgen -f -- "$2") )
      ;;
    *)
      COMPREPLY=( $(compgen -W "$(maid -l 2>/dev/null | cut -d ' ' -f 1)" -- "$2") )
      ;;
  esac
}

complete -F _maid -o nosort -o default maid

